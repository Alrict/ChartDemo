<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="TextAppearanceSmall" parent="TextTheme">
        <item name="android:textSize">@dimen/w38</item>
    </style>

    <style name="TextAppearanceMedium" parent="TextTheme">
        <item name="android:textSize">@dimen/w46</item>
    </style>


    <style name="TextAppearanceLarge" parent="TextTheme">
        <item name="android:textSize">@dimen/w52</item>
    </style>

    <!--分割线-->
    <style name="DividerLineHor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/h1</item>
        <item name="android:background">@color/def_line_color</item>
    </style>

    <!--start 默认的Button样式 高度统一为@dimen/h120,宽度为@dimen/w800-->
    <style name="CommentButtonStyle">
        <item name="android:layout_width">@dimen/w912</item>
        <item name="android:layout_height">@dimen/h126</item>
        <item name="android:background">@drawable/sl_comment_btn</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/w50</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">确定</item>
    </style>

    <style name="Animtop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>


    <!--dialog_btn样式-->
    <style name="dialog_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HomeRadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/home_btn</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/w10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/h30</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/w34</item>
    </style>

    <!--dialog样式activity 主题-->
    <style name="Theme.ActivityDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorForeground">#fff</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--dialog样式-->
    <style name="Theme.dialogLayout" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--end activity从底部滑进,滑出-->


    <style name="Animation.Popup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popwindow_in</item>
        <item name="android:windowExitAnimation">@anim/popwindow_out</item>
    </style>

    <style name="upload_image_methods_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:colorForeground">#fff</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Popup</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CommentLinearLayoutDialogStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/h140</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--加载动画-->
    <style name="LoadingDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="ActionBarContentText" parent="TextTheme">
        <item name="android:textSize">@dimen/w44</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    <!--页面标题文本样式-->
    <style name="ActionBarTitleText" parent="TextTheme">
        <item name="android:textSize">@dimen/w54</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <!--页面小号标题样式-->
    <style name="ActionBarTitleText2" parent="TextTheme">
        <item name="android:textSize">@dimen/w48</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!--环形进度条-->
    <declare-styleable name="CircleProgressBarView">
        <!--外圆半径-->
        <attr name="outterRadius" format="dimension"/>
        <!--进度条宽度-->
        <attr name="progressWidth" format="dimension"/>
        <!--背景进度条宽度-->
        <attr name="progressDefaultWidth" format="dimension"/>
        <!--内圆半径-->
        <attr name="innerRadius" format="dimension"/>
        <!--圆环默认颜色-->
        <attr name="circularRingBgColor" format="reference|color"/>
        <!--圆环进度条开始颜色-->
        <attr name="circularRingStartColor" format="reference|color"/>
        <!--圆环进度条结束颜色-->
        <attr name="circularRingEndColor" format="reference|color"/>
        <!--外围刻度条颜色-->
        <attr name="trackBarColor" format="reference|color"/>
        <!--外围刻度条数量-->
        <attr name="trackBarCounts" format="integer"/>
        <!--外围刻度条宽度-->
        <attr name="trackBarWidth" format="dimension"/>
        <!--外围刻度条长度-->
        <attr name="trackBarLength" format="dimension"/>
        <!--顶部字体颜色-->
        <attr name="topTextColor" format="reference|color"/>
        <!--顶部文字内容-->
        <attr name="topText" format="string"/>
        <!--顶部字体大小-->
        <attr name="topTextSize" format="dimension"/>
        <!--中间字体颜色-->
        <attr name="middleTextColor" format="reference|color"/>
        <!--中间文字内容-->
        <attr name="middleText" format="string"/>
        <!--中间字体大小-->
        <attr name="middleTextSize" format="dimension"/>
        <!--右边字体大小-->
        <attr name="middleRightTextSize" format="dimension"/>
        <!--底部字体颜色-->
        <attr name="bottomTextColor" format="reference|color"/>
        <!--底部字体内容-->
        <attr name="bottomText" format="string"/>
        <!--底部字体大小-->
        <attr name="bottomTextSize" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer" />
        <attr name="rv_framerate" format="integer"/>
        <attr name="rv_rippleDuration" format="integer"/>
        <attr name="rv_zoomDuration" format="integer" />
        <attr name="rv_color" format="color" />
        <attr name="rv_centered" format="boolean" />
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0"/>
            <enum name="doubleRipple" value="1"/>
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="rv_ripplePadding" format="dimension" />
        <attr name="rv_zoom" format="boolean" />
        <attr name="rv_zoomScale" format="float" />

    </declare-styleable>

    <!-- 日历控件 -->
    <declare-styleable name="DayPickerView">
        <attr name="colorCurrentDay" format="color" />
        <attr name="colorSelectedDayBackground" format="color" />
        <attr name="colorSelectedDayText" format="color" />
        <attr name="colorPreviousDay" format="color" />
        <attr name="colorNormalDay" format="color" />
        <attr name="colorMonthName" format="color" />
        <attr name="colorDayName" format="color" />
        <attr name="textSizeDay" format="dimension" />
        <attr name="textSizeMonth" format="dimension" />
        <attr name="textSizeDayName" format="dimension" />
        <attr name="headerMonthHeight" format="dimension" />
        <attr name="selectedDayRadius" format="dimension" />
        <attr name="calendarHeight" format="dimension" />
        <attr name="enablePreviousDay" format="boolean" />
        <attr name="currentDaySelected" format="boolean" />
        <attr name="drawRoundRect" format="boolean" />

        <attr name="firstMonth" format="enum">
            <enum name="january" value="0" />
            <enum name="february" value="1" />
            <enum name="march" value="2" />
            <enum name="april" value="3" />
            <enum name="may" value="4" />
            <enum name="june" value="5" />
            <enum name="july" value="6" />
            <enum name="august" value="7" />
            <enum name="september" value="8" />
            <enum name="october" value="9" />
            <enum name="november" value="10" />
            <enum name="december" value="11" />
        </attr>

        <attr name="lastMonth" format="enum">
            <enum name="january" value="0" />
            <enum name="february" value="1" />
            <enum name="march" value="2" />
            <enum name="april" value="3" />
            <enum name="may" value="4" />
            <enum name="june" value="5" />
            <enum name="july" value="6" />
            <enum name="august" value="7" />
            <enum name="september" value="8" />
            <enum name="october" value="9" />
            <enum name="november" value="10" />
            <enum name="december" value="11" />
        </attr>
    </declare-styleable>
</resources>
