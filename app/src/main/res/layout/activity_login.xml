<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_code_login_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h150"
            android:layout_marginTop="@dimen/h40">

            <RelativeLayout
                android:id="@+id/login_account_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h115"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_accounts"
                    style="@style/TextAppearanceMedium"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/w60"
                    android:text="账      号"
                    android:textColor="@color/text_content" />

                <LinearLayout
                    android:id="@+id/liner_account_edit2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h115"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/w30"
                    android:layout_marginRight="@dimen/w50"
                    android:layout_toRightOf="@+id/txt_accounts">

                    <EditText
                        android:id="@+id/id_phone_edit2"
                        style="@style/TextAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4"
                        android:background="@null"
                        android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-－"
                        android:hint="请输入账号"
                        android:inputType="textVisiblePassword"
                        android:maxLength="20" />

                    <ImageView
                        android:id="@+id/img_login_account_clear2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/w8"
                        android:src="@drawable/login_accout_clear_selector" />

                    <ImageView
                        android:id="@+id/img_login_account_tips2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/w8"
                        android:src="@mipmap/icon_down_arrow" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/DividerLineHor"
                android:layout_below="@+id/login_account_layout"
                android:layout_marginLeft="@dimen/w50"
                android:layout_marginRight="@dimen/w50"
                android:layout_marginTop="@dimen/h15" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/code_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h150"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearanceMedium"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/w60"
                android:text="验 证 码"
                android:textColor="@color/text_content" />

            <EditText
                android:id="@+id/edit_login_code2"
                style="@style/TextAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/w30"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/w50"
                android:minWidth="@dimen/w240"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_code_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/w20"
                    android:scaleType="center"
                    android:visibility="gone"
                    android:src="@mipmap/icon_logincode_loading"/>

                <Button
                    android:id="@+id/btn_login_get_code2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/h90"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/w20"
                    android:layout_marginRight="@dimen/w20"
                    android:background="@null"
                    android:text="获取验证码"
                    android:textSize="@dimen/w35" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/DividerLineHor"
            android:layout_below="@+id/code_layout"
            android:layout_marginLeft="@dimen/w50"
            android:layout_marginRight="@dimen/w50"
            android:layout_marginTop="@dimen/h5" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h150"
        android:layout_marginTop="@dimen/h20"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_auto_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <CheckBox
                android:id="@+id/cb_auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/w50"
                android:button="@drawable/icon_account_check_btn" />

            <TextView
                android:id="@+id/tv_auto_login"
                style="@style/TextAppearanceMedium"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/cb_auto_login"
                android:text="自动登录"
                android:textColor="@drawable/background_forget_password_text" />
        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/id_login"
        style="@style/CommentButtonStyle"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/w60"
        android:layout_marginRight="@dimen/w60"
        android:layout_marginTop="@dimen/h20"
        android:gravity="center"
        android:text="登录"
        android:textSize="@dimen/w54" />


</LinearLayout>