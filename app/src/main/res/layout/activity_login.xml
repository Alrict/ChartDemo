<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_bg">

    <RelativeLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h380"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
    >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h80"
            android:layout_marginTop="@dimen/h40"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/main_color_blue"
            android:textSize="@dimen/w55"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h1"
            android:layout_below="@id/tv_title"
            android:layout_gravity="center"
            android:layout_margin="@dimen/h20"
            android:background="@color/main_color_blue"/>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/h60"
            android:src="@mipmap/icon_logo_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logo"
            android:gravity="center"
            android:text="iHypnusCare"
            android:textColor="@color/main_color_blue"
            android:textSize="@dimen/w55"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h160"
        android:layout_below="@id/layout_input"
        android:layout_marginLeft="@dimen/w66"
        android:layout_marginRight="@dimen/w66"
        android:layout_marginTop="@dimen/h90">

        <View
            android:id="@+id/line1"
            style="@style/DividerLineHor"
            android:layout_alignParentTop="true"
            android:background="@color/main_color_blue"/>


        <LinearLayout
            android:id="@+id/liner_account_edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="@dimen/w56"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_user"/>

            <TextView
                android:id="@+id/tv_local_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/w38"
                android:gravity="center"
                android:text="+86"
                android:textColor="@color/main_color_blue"
                android:textSize="@dimen/w44"/>

            <ImageView
                android:id="@+id/iv_down_arrow"
                android:layout_width="@dimen/w26"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w20"
                android:src="@mipmap/ic_down_arrow"/>

            <View
                android:layout_width="@dimen/h2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/h20"
                android:background="@color/text_hint"/>

            <EditText
                android:id="@+id/id_phone_edit2"
                style="@style/TextAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:background="@null"
                android:hint="请输入账号"
                android:inputType="number"
                android:maxLength="11"/>

            <ImageView
                android:id="@+id/img_login_account_clear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/w8"
                android:src="@drawable/login_accout_clear_selector"
                android:visibility="invisible"/>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/line2"
        style="@style/DividerLineHor"
        android:layout_below="@+id/layout_user"
        android:layout_marginLeft="@dimen/w66"
        android:layout_marginRight="@dimen/w66"
        android:background="@color/main_color_blue"/>

    <LinearLayout
        android:id="@+id/code_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h160"
        android:layout_below="@+id/line2"
        android:layout_marginLeft="@dimen/w66"
        android:layout_marginRight="@dimen/w66"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pass_word"
            android:layout_width="@dimen/h56"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pass_word"/>


        <EditText
            android:id="@+id/edit_login_code2"
            style="@style/TextAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/w30"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="12"/>

        <ImageView
            android:id="@+id/iv_visibility_status"
            android:layout_width="@dimen/h56"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_un_see"/>
    </LinearLayout>


    <View
        android:id="@+id/line3"
        style="@style/DividerLineHor"
        android:layout_below="@+id/code_layout"
        android:layout_marginLeft="@dimen/w66"
        android:layout_marginRight="@dimen/w66"
        android:background="#2c76b3"/>

    <Button
        android:id="@+id/id_login"
        style="@style/CommentButtonStyle"
        android:layout_width="match_parent"
        android:layout_below="@+id/line3"
        android:layout_marginLeft="@dimen/w60"
        android:layout_marginRight="@dimen/w60"
        android:layout_marginTop="@dimen/h100"
        android:gravity="center"
        android:text="登录"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_login"
        android:layout_marginLeft="@dimen/w66"
        android:layout_marginRight="@dimen/w66"
        android:layout_marginTop="@dimen/h90"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:autoLink="all"
            android:text="立即注册？"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_fogot_pass_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:autoLink="all"
            android:text="忘记密码？"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/w60"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="其他登录方式"
            android:textColor="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h1"
            android:layout_marginLeft="@dimen/w66"
            android:layout_marginRight="@dimen/w66"
            android:layout_marginTop="@dimen/h10"
            android:background="#3082D6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/w66"
            android:layout_marginRight="@dimen/w66"
            android:layout_marginTop="@dimen/w66">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/w92"
                    android:layout_height="@dimen/w92"
                    android:src="@mipmap/icon_qq"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/w92"
                    android:layout_height="@dimen/w92"
                    android:src="@mipmap/icon_qq"/>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="..."
                android:textColor="@color/white"
                android:textSize="@dimen/w70"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>