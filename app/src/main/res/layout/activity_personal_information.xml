<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_background"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/def_line_color"/>

    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66px"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="86px"
            android:button="@drawable/circle_man_selector"
            android:checked="true"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/circle_female_selector"/>
    </RadioGroup>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_man"
            style="@style/TextAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="80px"
            android:text="@string/tv_man"/>

        <TextView
            android:id="@+id/tv_female"
            style="@style/TextAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="80px"
            android:text="@string/tv_female"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <!--昵称-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_below="@+id/ll_photo"
        android:layout_marginTop="120px"
        android:paddingLeft="90px"
        android:paddingRight="90px">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/def_line_color"/>
        <TextView
            android:id="@+id/tv_name"
            style="@style/TextAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/tv_account"
            android:textSize="38px"/>
        <TextView
            android:id="@+id/tv_person_name"
            style="@style/TextAppearanceMedium"
            android:layout_width="600px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:textSize="38px"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <!--性别-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_gender"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_below="@+id/ll_name"
        android:paddingLeft="90px"
        android:paddingRight="90px">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/def_line_color"/>
        <TextView
            android:id="@+id/tv_gender"
            style="@style/TextAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/tv_gender"
            android:textSize="38px"/>
        <TextView
            android:id="@+id/tv_person_gender"
            style="@style/TextAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/tv_man"
            android:textSize="38px"/>


    </com.zhy.autolayout.AutoRelativeLayout>

    <!--身高-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_height"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_below="@+id/ll_gender"
        android:paddingLeft="90px"
        android:paddingRight="90px">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/def_line_color"/>
        <TextView
            android:id="@+id/tv_height"
            style="@style/TextAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/tv_heigth"
            android:textSize="38px"/>
        <TextView
            android:id="@+id/tv_person_height"
            style="@style/TextAppearanceMedium"
            android:layout_width="600px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@+id/tv_height_arrow"
            android:gravity="center_vertical|right"
            android:textSize="38px"/>
        <ImageView
            android:id="@+id/tv_height_arrow"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_right_arrow"/>

    </com.zhy.autolayout.AutoRelativeLayout>


    <!--体重-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_body_weight"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_below="@+id/ll_height"
        android:paddingLeft="90px"
        android:paddingRight="90px">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/def_line_color"/>
        <TextView
            android:id="@+id/tv_body_weight"
            style="@style/TextAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/tv_weigth"
            android:textSize="38px"/>
        <TextView
            android:id="@+id/tv_person_body_weight"
            style="@style/TextAppearanceMedium"
            android:layout_width="600px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@+id/tv_body_weight_arrow"
            android:gravity="center_vertical|right"
            android:textSize="38px"/>
        <ImageView
            android:id="@+id/tv_body_weight_arrow"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_right_arrow"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <!--出生日期-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_date_birth"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_below="@+id/ll_body_weight"
        android:paddingLeft="90px"
        android:paddingRight="90px">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h1"
            android:layout_alignParentBottom="true"
            android:background="@color/def_line_color"/>
        <TextView
            android:id="@+id/tv_date_birth"
            style="@style/TextAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/tv_text_birthday"
            android:textSize="38px"/>
        <TextView
            android:id="@+id/tv_person_date_birth"
            style="@style/TextAppearanceMedium"
            android:layout_width="600px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@+id/iv_date_birth"
            android:gravity="center_vertical|right"
            android:textSize="38px"/>
        <ImageView
            android:id="@+id/iv_date_birth"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_right_arrow"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/btn_ok"
        style="@style/CommentButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="100px"
        android:gravity="center"
        android:text="@string/ok"
        android:textSize="54px"/>
    <TextView
        android:id="@+id/tv_infos_tip1"
        style="@style/TextAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:gravity="center"
        android:text="@string/tv_infos_tip1"
        android:textSize="34px"/>
    <TextView
        android:id="@+id/tv_infos_tip2"
        style="@style/TextAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:text="@string/tv_infos_tip2"
        android:textSize="34px"/>
</com.zhy.autolayout.AutoLinearLayout>