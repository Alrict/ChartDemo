<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img_background"
                android:orientation="vertical">
    <!--头部标题-->
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h1"
        android:background="@color/main_color_blue"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h1"
        android:layout_below="@id/line"
        android:layout_marginLeft="@dimen/w96"
        android:layout_marginRight="@dimen/w96"
        android:layout_marginTop="@dimen/h180"
        android:background="@color/main_color_blue"/>


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h180"
        android:layout_below="@+id/line1"
        android:orientation="horizontal">
        <com.ihypnus.widget.AppTextView
            android:id="@+id/et_input_device_sn"
            style="@style/TextAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="@dimen/h180"
            android:layout_marginLeft="@dimen/w60"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/hint_input_device_sn"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"/>
        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="@dimen/w60"
            android:layout_height="@dimen/w60"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/w96"
            android:src="@mipmap/icon_scan"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h1"
        android:layout_below="@+id/layout_input"
        android:layout_marginLeft="@dimen/w96"
        android:layout_marginRight="@dimen/w96"
        android:background="@color/main_color_blue"/>

    <com.ihypnus.widget.AppButton
        android:id="@+id/bt_next"
        style="@style/CommentButtonStyle"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/h668"
        android:layout_marginLeft="@dimen/w96"
        android:layout_marginRight="@dimen/w96"
        android:gravity="center"
        android:visibility="invisible"
        android:text="@string/bt_next"
        android:textSize="@dimen/w54"/>


</com.zhy.autolayout.AutoRelativeLayout>