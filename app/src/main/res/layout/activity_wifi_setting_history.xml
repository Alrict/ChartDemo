<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_background"
    android:orientation="vertical">

    <LinearLayout
        style="@style/CommentLinearLayout"
        android:layout_marginTop="@dimen/h300"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            style="@style/TextAppearanceMedium"
            android:text="SSID"
            android:textColor="@color/white"/>
        <View android:layout_width="@dimen/w2"
              android:layout_height="match_parent"
              android:layout_marginBottom="@dimen/h20"
              android:layout_marginLeft="@dimen/w20"
              android:layout_marginTop="@dimen/h20"
              android:background="@color/main_color_blue"/>
        <LinearLayout
            android:id="@+id/layout_ssid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/w30"
            android:background="@color/submit_btn_bg_default_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ssid"
                style="@style/TextAppearanceMedium"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/h20"
                android:layout_marginRight="@dimen/w30"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="@dimen/h76"
                android:layout_height="@dimen/h76"
                android:src="@mipmap/icon_down_arrow"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        style="@style/CommentLinearLayout"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            style="@style/TextAppearanceMedium"
            android:text="PWD"
            android:textColor="@color/white"/>
        <View android:layout_width="@dimen/w2"
              android:layout_height="match_parent"
              android:layout_marginBottom="@dimen/h20"
              android:layout_marginLeft="@dimen/w20"
              android:layout_marginTop="@dimen/h20"
              android:background="@color/main_color_blue"/>
        <LinearLayout
            android:id="@+id/layout_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/w30"
            android:background="@color/submit_btn_bg_default_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_pwd"
                style="@style/TextAppearanceMedium"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/h20"
                android:layout_marginRight="@dimen/w30"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/cb_visible"
                android:layout_width="@dimen/h76"
                android:layout_height="@dimen/h76"
                android:background="@drawable/password_visible"
                android:button="@null"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_confirm"
        style="@style/CommentButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/w90"
        android:layout_marginRight="@dimen/w90"
        android:layout_marginTop="@dimen/h300"
        android:gravity="center"
        android:text="чбошод"
        android:textSize="@dimen/w54"/>
</LinearLayout>