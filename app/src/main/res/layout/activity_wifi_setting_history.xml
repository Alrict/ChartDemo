<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_background"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        style="@style/CommentLinearLayout"
        android:layout_marginTop="300px"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            style="@style/TextAppearanceMedium"
            android:text="SSID"
            android:textColor="@color/white"/>
        <View android:layout_width="2px"
              android:layout_height="match_parent"
              android:layout_marginBottom="20px"
              android:layout_marginLeft="20px"
              android:layout_marginTop="20px"
              android:background="@color/main_color_blue"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_ssid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:background="@color/submit_btn_bg_default_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ssid"
                style="@style/TextAppearanceMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="30px"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="76px"
                android:layout_height="56px"
                android:layout_marginRight="30px"
                android:src="@mipmap/icon_white_down"/>

        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        style="@style/CommentLinearLayout"
        android:layout_marginTop="74px"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            style="@style/TextAppearanceMedium"
            android:text="PWD"
            android:textColor="@color/white"/>
        <View android:layout_width="2px"
              android:layout_height="match_parent"
              android:layout_marginBottom="20px"
              android:layout_marginLeft="20px"
              android:layout_marginTop="20px"
              android:background="@color/main_color_blue"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:background="@color/submit_btn_bg_default_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/tv_pwd"
                style="@style/TextAppearanceMedium"
                android:layout_width="0dp"
                android:layout_marginLeft="20px"
                android:layout_marginRight="30px"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/cb_visible"
                android:layout_width="76px"
                android:layout_height="56px"
                android:layout_marginRight="30px"
                android:background="@drawable/password_white_visible"
                android:button="@null"
                android:checked="true"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:id="@+id/tv_log"
        style="@style/TextAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_confirm"
        style="@style/CommentButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="300px"
        android:gravity="center"
        android:text="@string/ok"
        android:textSize="54px"/>
</com.zhy.autolayout.AutoLinearLayout>