<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ihypnus.ihypnuscare.activity.HomeActivity">

    <com.ihypnus.widget.NoScrollViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

   <!-- <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>-->


    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/main_color_blue"/>

    <RadioGroup
        android:id="@+id/rgp_tab"
        android:layout_width="match_parent"
        android:layout_height="165px"
        android:layout_gravity="bottom"
        android:background="#2A3354"
        android:orientation="horizontal">

        <com.ihypnus.widget.AppRadioButton
            android:id="@+id/rb_device"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/navigation_device"
            android:gravity="center"
            android:paddingTop="30px"
            android:text="@string/rb_device"
            android:textColor="@color/color_radiobutton"
            android:textSize="@dimen/w50"/>

        <com.ihypnus.widget.AppRadioButton
            android:id="@+id/rb_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/navigation_report"
            android:gravity="center"
            android:paddingTop="30px"
            android:text="@string/rb_report"
            android:textColor="@color/color_radiobutton"
            android:textSize="@dimen/w50"/>


        <com.ihypnus.widget.AppRadioButton
            android:id="@+id/rb_my_ihy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/navigation_ihy"
            android:gravity="center"
            android:paddingTop="30px"
            android:text="@string/rb_my_ihy"
            android:textColor="@color/color_radiobutton"
            android:textSize="@dimen/w50"/>
    </RadioGroup>


</com.zhy.autolayout.AutoLinearLayout>
