<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_normal_dialog"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_normal_dialog"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/w50"
            android:layout_marginRight="@dimen/w50"
            android:layout_marginTop="@dimen/h50"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/h32"
            android:padding="@dimen/w2"
            android:textColor="@color/text_content"
            android:textIsSelectable="true"
            android:textSize="@dimen/w56"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w50"
            android:layout_marginRight="@dimen/w50"
            android:layout_marginTop="@dimen/h50">
            <TextView
                android:id="@+id/tv_cancel"
                style="@style/TextAppearanceMedium"
                android:layout_alignParentLeft="true"
                android:text="@string/cancel"
                android:textColor="@color/text_blue1"/>

            <TextView
                android:id="@+id/tv_ok"
                style="@style/TextAppearanceMedium"
                android:layout_alignParentRight="true"
                android:text="@string/ok"
                android:textColor="@color/text_blue1"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/h10"
            android:background="@color/gray_white"/>
        <com.contrarywind.view.WheelView
            android:id="@+id/wv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h500"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/w50"
            android:background="@color/white"/>

    </LinearLayout>
</RelativeLayout>