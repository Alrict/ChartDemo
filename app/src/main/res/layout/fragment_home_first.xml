<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/room_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#171c3a">
    <RelativeLayout
        android:id="@+id/layout_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h150"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_last_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_down_arrow"/>
        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="五月二十八"
            android:textColor="@color/white"
            android:textSize="@dimen/w54"/>
        <ImageView
            android:id="@+id/iv_next_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_down_arrow"/>
    </RelativeLayout>


    <com.ihypnus.ihypnuscare.widget.CircleProgressBarView
        android:id="@+id/pb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_data"
        app:bottomTextColor="#00ff00"
        app:circularRingBgColor="#383c55"
        app:innerRadius="@dimen/w260"
        app:middleRightTextSize="@dimen/w40"
        app:middleTextColor="@color/tangerine"
        app:middleTextSize="@dimen/w100"
        app:outterRadius="@dimen/w330"
        app:progressDefaultWidth="@dimen/w30"
        app:progressWidth="@dimen/w36"
        app:topText="睡眠分数"
        app:topTextColor="@color/white"
        app:topTextSize="@dimen/w50"
        app:trackBarColor="#236fa1"
        app:trackBarLength="@dimen/h32"
        app:trackBarWidth="@dimen/h4"/>

    <TextView
        android:id="@+id/tv_usage_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/h30"
        android:text="使用时长"
        android:textColor="@color/gray_white"
        android:textSize="@dimen/w44"/>

    <TextView
        android:id="@+id/tv_usage_long_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_usage_long"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/h30"
        android:text="12时25分"
        android:textColor="@color/white"
        android:textSize="@dimen/w44"/>

    <RelativeLayout
        android:id="@+id/layout_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_usage_long_time"
        android:layout_marginTop="@dimen/h30">
        <TextView
            android:id="@+id/tv_usage_long_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="12:23--20:36"
            android:textColor="@color/white"
            android:textSize="@dimen/w44"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w150"
            android:src="@mipmap/icon_down_arrow"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_useage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_time"
        android:layout_marginTop="@dimen/h30">
        <TextView
            android:id="@+id/tv_useage_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="使用详情"
            android:textColor="@color/white"
            android:textSize="@dimen/w54"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h1"
            android:layout_below="@+id/tv_useage_detail"
            android:layout_marginTop="@dimen/h15"
            android:background="@color/main_color_blue"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_useage"
        android:layout_marginTop="@dimen/h30"
        android:baselineAligned="false"
        android:orientation="horizontal">
        <!--设备模式-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="设备模式"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/w44"/>
            <TextView
                android:id="@+id/tv_device_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="APAP"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/w44"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h30"
                android:gravity="center"
                android:text="平均漏气"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/w44"/>
            <TextView
                android:id="@+id/tv_average_air_leak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5.6L/min"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/w44"/>
        </LinearLayout>

        <!--吸气压力-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="90%吸气压力"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/w44"/>
            <TextView
                android:id="@+id/tv_nhale_kpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="11cmH2O"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/w44"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h30"
                android:gravity="center"
                android:text="AHI"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/w44"/>
            <TextView
                android:id="@+id/tv_ahi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="11"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/w44"/>
        </LinearLayout>

        <!--呼气压力-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="呼气压力"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/w44"/>
            <TextView
                android:id="@+id/tv_expiration_kpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4cmH2O"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/w44"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>