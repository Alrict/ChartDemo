<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:paddingLeft="@dimen/w70"
                android:paddingRight="@dimen/w70"
>

    <LinearLayout
        android:id="@+id/layout_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_normal_dialog"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/w50"
            android:layout_marginRight="@dimen/w50"
            android:layout_marginTop="@dimen/h50"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/h32"
            android:padding="@dimen/w2"
            android:textColor="@color/text_content"
            android:textIsSelectable="true"
            android:textSize="@dimen/w56"/>
        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/w50"
            android:layout_marginRight="@dimen/w50"
            android:layout_marginTop="@dimen/h50"
            android:background="@drawable/edittext_shap"
            android:gravity="center"
            android:minHeight="@dimen/h120"
            android:padding="@dimen/w2"
            android:textColor="@color/text_content"
            android:textSize="@dimen/w50"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h50"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/h120"
                android:layout_marginBottom="@dimen/h30"
                android:layout_marginLeft="@dimen/w50"
                android:layout_marginRight="@dimen/w50"
                android:layout_weight="1"
                android:background="@drawable/selector_dialog_bg_btn_bottom"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/w50"
                android:visibility="visible"/>
            <Button
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/h120"
                android:layout_marginBottom="@dimen/h30"
                android:layout_marginLeft="@dimen/w50"
                android:layout_marginRight="@dimen/w50"
                android:layout_weight="1"
                android:background="@drawable/selector_dialog_bg_btn_bottom"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/w50"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>