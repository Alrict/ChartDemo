<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h140"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/w54"
        android:layout_height="@dimen/w54"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/w20"
        android:src="@mipmap/icon_device_normal"/>
    <TextView
        android:id="@+id/tv_device_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/w44"
        android:layout_toRightOf="@id/iv_icon"
        android:text="AU732W"
        android:textColor="@color/white"
        android:textSize="@dimen/w46"/>
    <TextView
        android:id="@+id/tv_device_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/w32"
        android:layout_toRightOf="@id/tv_device_model"
        android:text="cp100100501"
        android:textColor="@color/white"
        android:textSize="@dimen/w28"/>
    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="@dimen/w38"
        android:layout_height="@dimen/w38"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/h80"
        android:src="@mipmap/ic_circle_unchecked"/>

    <View style="@style/CommentDividingLineNoPadding"
          android:layout_alignParentBottom="true"
          android:layout_marginRight="@dimen/h80"
    />

</RelativeLayout>