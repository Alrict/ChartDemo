<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/w30"
              android:layout_marginRight="@dimen/w30"
              android:background="@drawable/background_rounded_rectangle_white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/h90"
        android:paddingLeft="@dimen/w80"
        android:paddingRight="@dimen/w80"
        android:paddingTop="@dimen/h50"
        android:textColor="@color/black_pure"/>


    <com.ihypnus.ihypnuscare.widget.MaxHeightScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w50"
                android:layout_marginRight="@dimen/w50"
                android:lineSpacingExtra="@dimen/h30"
                android:textColor="#333333"
                android:textSize="@dimen/w44"/>

        </LinearLayout>
    </com.ihypnus.ihypnuscare.widget.MaxHeightScrollView>


    <View
        style="@style/DividerLineHor"
        android:layout_marginTop="@dimen/h28"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h140"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_back"
            style="@style/TextAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/tv_iknow"
            android:textColor="@color/text_blue"/>
    </LinearLayout>

</LinearLayout>