<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171c3a"
    android:orientation="vertical"
    tools:context="com.ihypnus.ihypnuscare.activity.HomeActivity">

    <!--头部标题-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h160"
    >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tv_title"
            android:textColor="@color/white"
            android:textSize="@dimen/w54"/>
        <ImageView
            android:id="@+id/iv_data"
            android:layout_width="@dimen/w56"
            android:layout_height="@dimen/w56"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w80"
            android:layout_toRightOf="@id/tv_title"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_calendar"/>

        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="@dimen/w56"
            android:layout_height="@dimen/w56"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w60"
            android:layout_toRightOf="@id/iv_data"
            android:src="@mipmap/icon_refresh_small"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h1"
            android:layout_alignParentBottom="true"
            android:background="@color/main_color_blue"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <!--进度条-->
    <com.ihypnus.ihypnuscare.widget.VerticalViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    />


    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h2"
        android:background="@color/main_color_blue"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/h165"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_device"
            style="@style/HomeRadioButtonStyle"
            android:checked="true"
            android:drawableTop="@drawable/navigation_device"
            android:gravity="center_horizontal"
            android:text="设备"/>

        <RadioButton
            android:id="@+id/rb_report"
            style="@style/HomeRadioButtonStyle"
            android:drawableTop="@drawable/navigation_report"
            android:gravity="center_horizontal"
            android:text="报告"/>


        <RadioButton
            android:id="@+id/rb_my_ihy"
            style="@style/HomeRadioButtonStyle"
            android:drawableTop="@drawable/navigation_ihy"
            android:gravity="center_horizontal"
            android:text="我的"/>
    </RadioGroup>


</com.zhy.autolayout.AutoLinearLayout>
