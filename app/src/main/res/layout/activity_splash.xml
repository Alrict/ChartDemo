<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/im_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:scaleType="fitXY"
        android:src="@mipmap/img_splash" />

    <LinearLayout
        android:layout_width="@dimen/w500"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/h50"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/h20"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/h46"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_jump_over"
            android:layout_width="@dimen/w160"
            android:layout_height="@dimen/w70"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/h40"
            android:background="@drawable/background_splash_btn"
            android:gravity="center"
            android:text="跳过"
            android:textColor="@color/white"
            android:textSize="@dimen/h40"
            android:visibility="invisible" />
    </LinearLayout>
</FrameLayout>
