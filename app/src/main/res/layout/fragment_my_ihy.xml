<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F466F">
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/w180"
        android:layout_height="@dimen/w180"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/h200"
        android:src="@mipmap/icon_man"/>
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/h30"
        android:text="iphynus_App"
        android:textColor="@color/white"
        android:textSize="@dimen/w60"/>
    <RelativeLayout
        android:id="@+id/layout_person_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h150"
        android:layout_marginTop="@dimen/h100"
        android:layout_below="@id/tv_user_name"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_icon_user"
            android:layout_width="@dimen/w66"
            android:layout_height="@dimen/w66"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w80"
            android:src="@mipmap/ic_user_white"/>

        <TextView
            android:id="@+id/tv_person_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w80"
            android:layout_toRightOf="@+id/iv_icon_user"
            android:text="个人资料"
            android:textColor="@color/white"
            android:textSize="@dimen/w44"/>
        <ImageView
            android:layout_width="@dimen/w66"
            android:layout_height="@dimen/w66"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/w550"
            android:layout_marginRight="@dimen/w80"
            android:layout_toRightOf="@id/tv_person_info"
            android:src="@mipmap/icon_right_arrow"/>
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h1"
        android:layout_below="@id/layout_person_info"
        android:layout_marginLeft="@dimen/w80"
        android:layout_marginRight="@dimen/w80"
        android:background="@color/white"/>

    <RelativeLayout
        android:id="@+id/layout_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h150"
        android:layout_below="@id/line1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_ic_help"
            android:layout_width="@dimen/w66"
            android:layout_height="@dimen/w66"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w80"
            android:src="@mipmap/ic_book_help"/>

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w80"
            android:layout_toRightOf="@+id/iv_ic_help"
            android:text="帮助中心"
            android:textColor="@color/white"
            android:textSize="@dimen/w44"/>
        <ImageView
            android:layout_width="@dimen/w66"
            android:layout_height="@dimen/w66"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w550"
            android:layout_marginRight="@dimen/w80"
            android:src="@mipmap/icon_right_arrow"/>
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h1"
        android:layout_below="@id/layout_help"
        android:layout_marginLeft="@dimen/w80"
        android:layout_marginRight="@dimen/w80"
        android:background="@color/white"/>

    <RelativeLayout
        android:id="@+id/layout_suggestions"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h150"
        android:layout_below="@id/line2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_ic_suggestion"
            android:layout_width="@dimen/w66"
            android:layout_height="@dimen/w66"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w80"
            android:src="@mipmap/ic_suggestions"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w80"
            android:layout_toRightOf="@+id/iv_ic_suggestion"
            android:text="意见反馈"
            android:textColor="@color/white"
            android:textSize="@dimen/w44"/>
        <ImageView
            android:layout_width="@dimen/w66"
            android:layout_height="@dimen/w66"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w550"
            android:layout_marginRight="@dimen/w80"
            android:src="@mipmap/icon_right_arrow"/>
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h1"
        android:layout_below="@id/layout_suggestions"
        android:layout_marginLeft="@dimen/w80"
        android:layout_marginRight="@dimen/w80"
        android:background="@color/white"/>

    <RelativeLayout
        android:id="@+id/layout_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h150"
        android:layout_below="@id/line3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ic_settings"
            android:layout_width="@dimen/w66"
            android:layout_height="@dimen/w66"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w80"
            android:src="@mipmap/ic_settings"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w80"
            android:layout_toRightOf="@+id/ic_settings"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="@dimen/w44"/>
        <ImageView
            android:layout_width="@dimen/w66"
            android:layout_height="@dimen/w66"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w550"
            android:layout_marginRight="@dimen/w80"
            android:src="@mipmap/icon_right_arrow"/>
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h1"
        android:layout_below="@id/layout_settings"
        android:layout_marginLeft="@dimen/w80"
        android:layout_marginRight="@dimen/w80"
        android:background="@color/white"/>

</RelativeLayout>