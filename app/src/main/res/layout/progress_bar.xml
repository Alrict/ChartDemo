<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/w320"
        android:layout_height="@dimen/w320">

        <ImageView
            android:id="@+id/xlistview_header_progressbar"
            android:layout_width="@dimen/w200"
            android:layout_height="@dimen/w200"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/w50"
            android:src="@mipmap/icon_loading"/>

        <TextView
            android:id="@+id/loading_tv"
            style="@style/TextAppearanceMedium"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="加载中..."
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>