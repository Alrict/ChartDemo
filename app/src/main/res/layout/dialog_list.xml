<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/w50"
        android:layout_marginRight="@dimen/w50"
        android:background="@drawable/bg_normal_dialog"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/w50"
            android:layout_marginRight="@dimen/w50"
            android:layout_marginTop="@dimen/h50"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/h32"
            android:padding="@dimen/w2"
            android:textColor="@color/text_content"
            android:textIsSelectable="true"
            android:textSize="@dimen/w56"/>
        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h600"
            android:background="@null"
            android:divider="@null"
            android:scrollbars="none"/>
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h120"
            android:layout_marginBottom="@dimen/h30"
            android:layout_marginLeft="@dimen/w50"
            android:layout_marginRight="@dimen/w50"
            android:layout_marginTop="@dimen/h30"
            android:background="@drawable/selector_dialog_bg_btn_bottom"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/w50"
            android:visibility="visible"/>
    </LinearLayout>
</RelativeLayout>